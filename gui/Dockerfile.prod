FROM node:20-bullseye-slim AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci --silent
COPY . .
RUN npm run build

FROM node:20-bullseye-slim AS runtime
WORKDIR /app

COPY --from=build /app/build ./build
COPY --from=build /app/package*.json ./
RUN npm ci --production --silent

EXPOSE 80

ENV PORT=80
ENV HOST=0.0.0.0

CMD ["node", "build"]
